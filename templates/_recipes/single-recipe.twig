{% extends "_layout" %}
{% block main %}
<section class="recipe-hero">
    <div class="hero-left" style="background-image:url(/{{ entry.recipeImage.one().url }})">
        <figure>
            <img src="/{{ entry.recipeImage.one().url }}" alt="{{ entry.title }}" />
        </figure>
    </div>
    <div class="hero-right">
        <div class="hero-right--inner">
            <a class="mobile-back" href="/"><span></span> Back to all recipes</a>
            <h1>{{ entry.title }}</h1>
            <p>{{ entry.recipeDescription }}</p>
            <button v-on:click="printPage"><span class="material-icons">print</span> Print Recipe</button>
            <div class="hero-right--info">
                <ul>
                    <li>
                        <span class="info-icon prep"></span>
                        <span class="info-label">Prep Time</span>
                        <span class="info-value">{{ entry.prepTime }}</span>
                    </li>
                    <li>
                        <span class="info-icon cook"></span>
                        <span class="info-label">Cook Time</span>
                        <span class="info-value">{{ entry.cookTime }}</span>
                    </li>
                    <li>
                        <span class="info-icon total"></span>
                        <span class="info-label">Total Time</span>
                        <span class="info-value">{{ entry.totalTime }}</span>
                    </li>
                    <li>
                        <span class="info-icon serves"></span>
                        <span class="info-label">Serves</span>
                        <span class="info-value">{{ entry.servings }}</span>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</section>

{% if entry.longDescription is not empty %}
<section class="long-description">{{entry.longDescription}}</section>
{% endif %}

<section class="body">
    <div class="body-left">
        <div class="body-left--heading">
            <h2>How To Make it:</h2>
            <div class="body-left--hr hr-style-1"></div>
        </div>
        <div class="body-left--instructions">
            {{ entry.instructions }}
        </div>
        <div class="body-left--tip">
            <h3>- Tip -</h3>
            <p>{{ entry.recipeTip|raw }}</p>
        </div>
    </div>
    <div class="body-right">
        <div class="body-right--heading">
            <h2>Ingredients</h2>
            <div class="body-right--hr hr-style-4"></div>
        </div>
        <div class="body-right--ingredients">
            {{ entry.ingredients }}
        </div>
        <div class="body-right--heading body-right--product">
            <h2>Made With:</h2>
            <div class="body-right--product-hr hr-style-3"></div>
            <a href="{{ entry.relatedProduct.one().productUrl }}">
                <img src="/{{ entry.relatedProduct.one().productImage.one().url }}" alt="{{ entry.relatedProduct.one().title }}" />
                <label>{{ entry.relatedProduct.one().title }}</label>
            </a>
        </div>
    </div>
</section>
<section class="yellow-bar" style="background-image:url(/{{ globals.yellowBg.one().url }})">
    <a href="/">
        <img alt="Back to all recipes" src="data:image/svg+xml;base64," />
    </a>
</section>
{% endblock %}